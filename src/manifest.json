{
    "manifest_version": 3,
    "name": "Send and Show Selection",
    "version": "1.0",
    "permissions": [
        "contextMenus",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "background": {
        "service_worker": "background.js"
    }
}